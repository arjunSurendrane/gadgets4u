<script>
    async function deleteProduct(_id) {
        let isExecuted = confirm("Are you sure?");
        if (isExecuted) {
            const res = await axios({
                method: 'get',
                url: `/admin/coupon/${_id}`
            })
            location.reload(true)
        }
    }
</script>
