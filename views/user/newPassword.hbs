<div class="customer-login mt-5">
    <div class="container d-flex justify-content-center">
        <div class="row w-50 ">
            <!--login area start-->
            <div class="col-lg-12 col-md-12">
                <div class="account_form" data-aos="fade-up" data-aos-delay="0">
                    <h3>Change Password</h3>
                    <form class="form">
                        <div class="default-form-box text-center">
                            <p><strong class="text-danger d-none" id="errorMessage"> incorrect password or email id
                                    !!</strong></p>
                        </div>
                        <div class="default-form-box">
                            <label>New Password <span>*</span></label>
                            <input type="password" name="password" id="newPassword" required="required">
                        </div>
                        <div class="default-form-box">
                            <label>Confirm Passwords <span>*</span></label>
                            <input type="password" name="password" id="password" required="required">
                            <p><strong class="d-none text-danger" id="error">Password doesn't match</strong></p>
                        </div>
                        <div class="login_submit">
                            <button class="btn btn-md btn-black-default-hover mb-4" type="submit">login</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--login area start-->

            <!--register area start-->

            <!--register area end-->
        </div>
    </div>
    <script>
        const submitForm = document.querySelector('.form')
        submitForm.addEventListener('submit', async el => {
            el.preventDefault();
            const password = document.getElementById('password').value
            const newPassword = document.getElementById('newPassword').value
            if (password == newPassword) {
                const res = await axios({
                    method: 'post',
                    url: '/newPassword',
                    data: {
                        password
                    }
                })
                location.assign('/')
            } else {
                document.getElementById('password').style.borderColor = 'red'
                document.getElementById('error').classList.remove('d-none')
                window.addEventListener('click', el => {
                    document.getElementById('error').classList.add('d-none')
                })
            }
        })
    </script>