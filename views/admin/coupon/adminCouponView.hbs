        <div class="card-header py-3 d-flex justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Coupon Details</h6>
            <a href="/admin/couponAdd">
                <h6 class="m-0 font-weight-bold text-primary">Add Coupon</h6>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Offer Percentage</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Product Name</th>
                            <th>Offer Percentage</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        {{#each coupon}}
                        <tr>
                            <td>{{code}}</td>
                            <td>{{isPercent}}%</td>
                            <td><a href="/admin/coupon/edit/{{_id}}">edit</a></td>
                            <td><button onclick="deleteProduct('{{_id}}')"
                                    class="btn bg-dark text-white">delete</button></td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
